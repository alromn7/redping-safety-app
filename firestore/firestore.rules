rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() {
      return request.auth != null;
    }

    function sameOrg(orgId) {
      return isAuthed() && request.auth.token.orgId == orgId;
    }

    function hasRole(orgId, roles) {
      return sameOrg(orgId) && (request.auth.token.role in roles);
    }

    match /orgs/{orgId} {
      allow read: if sameOrg(orgId);
      allow create, update, delete: if hasRole(orgId, ['admin']);

      // Members collection
      match /members/{memberId} {
        allow read: if sameOrg(orgId);
        allow create, update, delete: if hasRole(orgId, ['admin']);
      }

      // Incidents collection
      match /incidents/{incidentId} {
        allow read: if sameOrg(orgId);
        allow create, update, delete: if hasRole(orgId, ['coordinator', 'admin']);

        // Messages subcollection per incident
        match /messages/{messageId} {
          allow read: if sameOrg(orgId);
          allow create: if hasRole(orgId, ['member', 'coordinator', 'admin']);
          allow update, delete: if hasRole(orgId, ['coordinator', 'admin']);
        }
      }

      // Audit logs collection (admin/coordinator writes, org reads)
      match /audit_logs/{logId} {
        allow read: if sameOrg(orgId);
        allow create: if hasRole(orgId, ['coordinator', 'admin']);
        allow update, delete: if hasRole(orgId, ['admin']);
      }
    }
  }
}
